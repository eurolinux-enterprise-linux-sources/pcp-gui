TEMPLATE	= app
LANGUAGE	= C++
HEADERS		= aboutdialog.h console.h pmtimearch.h pmtimelive.h \
		  seealsodialog.h showboundsdialog.h \
		  timelord.h timezone.h
SOURCES		= aboutdialog.cpp console.cpp pmtimearch.cpp pmtimelive.cpp \
		  seealsodialog.cpp showboundsdialog.cpp \
		  timelord.cpp main.cpp
FORMS		= aboutdialog.ui console.ui pmtimelive.ui pmtimearch.ui \
		  seealsodialog.ui showboundsdialog.ui
ICON		= pmtime.icns
RC_FILE		= pmtime.rc
RESOURCES	= pmtime.qrc
INCLUDEPATH	+= ../include ../libqwt
win32:INCLUDEPATH += @pcp_dir@/include
LIBS		= -lpcp -L../libqwt -lqwt
LIBS		+= -L../libqwt/@qt_release@ -L../libqwt/build/@qt_release@
win32:LIBS	+= -L @pcp_dir@/bin -L @pcp_dir@/local/bin -lwsock32
QT		+= network
CONFIG		+= qt warn_on @qt_release@
QMAKE_INFO_PLIST = pmtime.info
